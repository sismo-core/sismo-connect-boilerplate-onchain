{
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as the --compilerOptions flag
    // it is useful to call the compute-tree.ts script
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    }
  },
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../script/tree/compute-tree.ts"],
  "exclude": ["node_modules"]
}
